<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.davescoolmobileapps.arithmetic3.ArithmeticTest">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="29dp"
        android:text="tv3"
        android:textSize="40dp"
        tools:height="20dp"
        tools:layout_height="50dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:text="tv4"
        android:textSize="40dp"
        tools:layout_height="50dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginRight="5dp"
        android:layout_toStartOf="@+id/textView3"
        android:text="+"
        android:textSize="40dp"
        tools:layout_height="50dp" />

    <View
        android:id="@+id/separator"
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignRight="@+id/textView4"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:background="@android:color/darker_gray" />

    <EditText
        android:id="@+id/stuGuess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/separator"
        android:layout_alignStart="@+id/separator"
        android:layout_below="@+id/separator"
        android:ems="10"
        android:inputType="number"
        android:textSize="40dp"
        tools:layout_width="100dp"
        android:onClick="compareResult"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/stuGuess"
        android:layout_below="@+id/stuGuess"
        android:layout_marginTop="32dp"
        android:text="TextView" />
</RelativeLayout>
