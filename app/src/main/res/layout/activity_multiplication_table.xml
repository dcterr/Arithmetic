<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.davescoolmobileapps.arithmetic3.MultiplicationTable">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/x"
        android:width="100px"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginStart="27dp"
        android:onClick="prod" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter #1:"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/x"
        android:layout_alignParentStart="true"
        android:onClick="prod" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter #2:"
        android:id="@+id/textView2"
        android:layout_below="@+id/x"
        android:layout_alignParentStart="true"
        android:onClick="prod" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/y"
        android:width="50dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignStart="@+id/x" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/product"
        android:layout_below="@+id/y"
        android:layout_alignParentStart="true"
        android:width="200dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/z"
        android:layout_alignEnd="@+id/product"
        android:layout_below="@+id/product"
        android:layout_toEndOf="@+id/y" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The product is "
        android:id="@+id/textView3"
        android:layout_below="@+id/product"
        android:layout_alignParentStart="true" />

</RelativeLayout>
